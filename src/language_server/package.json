{
	"name": "pie-lsp",
	"description": "A language server for Pie",
	"author": "Source Academy",
	"version": "1.0.0",
	"repository": {
		"type": "git"
	},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.103.0"
	},
	"activationEvents": [
		"onLanguage:pie"
	],
	"main": "./out/client/src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "pie",
				"aliases": ["Pie", "pie"],
				"extensions": [".pie"],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"test": "jest"
	},
	"dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22",
		"@types/vscode": "^1.103.0",
		"eslint": "^9.13.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.4.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}
