{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "outDir": "./dist-standalone",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "declaration": false,
        "noImplicitAny": false,
        "allowJs": true
    },
    "include": [
        "src/standalone.ts",
        "src/pie_interpreter/**/*",
        "src/scheme_parser/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/__tests__/**/*",
        "src/pie_interpreter/index.ts",
        "src/pie_interpreter/PieEvaluator.ts"
    ]
}